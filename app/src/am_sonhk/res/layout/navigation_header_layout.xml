<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llTopMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10sp"
    android:background="@drawable/drawable_gradient"
    android:orientation="vertical"
    android:paddingStart="20sp"
    android:paddingTop="40sp"
    android:paddingBottom="20sp"
    tools:ignore="RtlSymmetry">

    <ImageView
        android:layout_width="106dp"
        android:layout_height="97dp"
        android:layout_marginVertical="10sp"
        android:contentDescription="@string/content_des_more"
        android:scaleType="centerInside"
        android:src="@drawable/icon_java" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_drawer"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/web_address"
        android:textColor="@color/colorGrey"
        android:textSize="20sp" />
</LinearLayout>