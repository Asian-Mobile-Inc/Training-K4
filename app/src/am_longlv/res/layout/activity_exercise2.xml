<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Exercise2Activity">
    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="Số hạng 1"/>
        <EditText
            android:id="@+id/edt_so1"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="Số hạng 2"/>
        <EditText
            android:id="@+id/edt_so2"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginHorizontal="10dp">
        <Button
            android:id="@+id/btn_cong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:textColor="@color/black"
            android:background="@color/gray"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/btn_tru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textColor="@color/black"
            android:background="@color/gray"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/btn_nhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="*"
            android:textColor="@color/black"
            android:background="@color/gray"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/btn_chia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="/"
            android:textColor="@color/black"
            android:background="@color/gray"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_ketqua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ket qua:"
        android:textSize="16sp"
        android:layout_marginHorizontal="10dp"/>
</LinearLayout>